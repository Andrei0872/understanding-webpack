{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debugging webpack",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "explore"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debugging webpack's tests",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        // Check the ``webpack/package.json` file for other test-related scripts.
        "test:basic"
      ],
      "cwd": "${workspaceFolder}/webpack"
    },
  ]
}